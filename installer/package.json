{
  "name": "desktop-mate",
  "version": "1.0.0",
  "description": "Cute desktop companion",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.desktopmate.app",
    "productName": "Desktop Mate",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "simple-index.html",
      "simple-mate.js",
      "package.json"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^24.13.3"
  },
  "keywords": [
    "desktop",
    "companion",
    "pet",
    "virtual"
  ],
  "author": "Your Name",
  "license": "MIT"
}
